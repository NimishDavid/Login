<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Bug Reports</title>
        <link rel="stylesheet" type="text/css" href="/style/bugReports.css">
    </head>
    <body>
    <% include navbar %>
    <div class="container">
    	<div class="row">
			<div class="col-md-12">
                    <% if(typeof(resultDev) != 'undefined') { %>
                        <% if(type == 'open') { %>
                            <div class="panel panel-default">
            					<div class="panel-heading">
            						<h3 class="panel-title">Reported Bugs</h3>
            						<div class="pull-right">
            							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                                            <i class="fa fa-filter" aria-hidden="true"></i>
            							</span>
            						</div>
            					</div>
            					<div class="panel-body">
            						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Bugs" />
            					</div>
        					<table class="table table-responsive table-hover" id="dev-table">
        						<thead>
        							<tr>
        								<th>#</th>
        								<th>Name</th>
        								<th>Type</th>
        								<th>Description</th>
                        <th>Severity</th>
                        <th>Priority</th>
                        <th>File</th>
                        <th>Method</th>
                        <th>Line</th>
                        <th>Status</th>
                        <th>Save</th>
        							</tr>
        						</thead>
                            <tbody>
                            <% for(i=0; i<resultDev.length; i++) {%>
                                <% if((resultDev[i].status == 'Assigned')||(resultDev[i].status == 'Resolving')) {%>

                                    <tr>
            								<td class="bug_id"><%= resultDev[i].id %></td>
            								<td><%= resultDev[i].name %></td>
            								<td><%= resultDev[i].bug_type %></td>
            								<td><%= resultDev[i].description %></td>
                                            <td><%= resultDev[i].severity %></td>
                                            <td><%= resultDev[i].priority %></td>
                                            <td><%= resultDev[i].file %></td>
                                            <td><%= resultDev[i].method %></td>
                                            <td><%= resultDev[i].line %></td>
                                            <td class="stat">
                                              <select class="form-control" name="status" required>
                                               <option value="">Select status</option>
                                               <option value="Resolving">Resolving</option>
                                               <option value="Review">Review</option>
                                              </select>
                                              <div class="help-block with-errors"></div>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary update">Save</button>
                                            </td>
            							</tr>

                                    <% } %>
                                <% } %>
        						</tbody>
        					</table>
                        <% } %> <!--If state is unassigned -->

                        <% if(type == 'history') { %>
                            <div class="panel panel-default">
            					<div class="panel-heading">
            						<h3 class="panel-title">Reported Bugs</h3>
            						<div class="pull-right">
            							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                                            <i class="fa fa-filter" aria-hidden="true"></i>
            							</span>
            						</div>
            					</div>
            					<div class="panel-body">
            						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Bugs" />
            					</div>
        					<table class="table table-responsive table-hover" id="dev-table">
        						<thead>
        							<tr>
        								<th>#</th>
        								<th>Name</th>
        								<th>Type</th>
        								<th>Description</th>
                        <th>Severity</th>
                        <th>Priority</th>
                        <th>File</th>
                        <th>Method</th>
                        <th>Line</th>
                        <th>Status</th>
        							</tr>
        						</thead>
                            <tbody>
                            <% for(i=0; i<resultDev.length; i++) {%>
                                <% if((resultDev[i].status != 'Assigned')&&(resultDev[i].status != 'Resolving')) {%>

                                    <tr>
            								<td class="bug_id"><%= resultDev[i].id %></td>
            								<td><%= resultDev[i].name %></td>
            								<td><%= resultDev[i].bug_type %></td>
            								<td><%= resultDev[i].description %></td>
                                            <td><%= resultDev[i].severity %></td>
                                            <td><%= resultDev[i].priority %></td>
                                            <td><%= resultDev[i].file %></td>
                                            <td><%= resultDev[i].method %></td>
                                            <td><%= resultDev[i].line %></td>
                                            <td><%= resultDev[i].status %></td>
            							</tr>

                                    <% } %>
                                <% } %>
        						</tbody>
        					</table>
                        <% } %>

                    <% } %> <!--If developer -->
				</div>
			</div>
		</div>
	</div>

    <script src="/table.js" charset="utf-8"></script>
    <script src="/devStatusUpdate.js" charset="utf-8"></script>
    <script src="/axios.min.js" charset="utf-8"></script>

    </body>
</html>
