<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Manage Projects</title>
        <link rel="stylesheet" href="/style/manageProjects.css">
    </head>
    <body>

        <% include navbar %>

        <div class="container">
        	<div class="row">
    			<div class="col-md-12">
                    <% if(typeof(msg) != 'undefined') { %>
                        <%if(msg == 'successRem') {%>
                            <div class="alert alert-success alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success!</strong>&nbspTester removed from the project team.
                            </div>
                        <% } else if(msg == 'failRem') {%>
                            <div class="alert alert-danger alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong>&nbspOperation failed.
                            </div>
                        <% } %>
                        <%if(msg == 'successAdd') {%>
                            <div class="alert alert-success alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success!</strong>&nbspTester added to the project team.
                            </div>
                        <% } else if(msg == 'failAdd') {%>
                            <div class="alert alert-danger alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong>&nbspOperation failed.
                            </div>
                        <% } %>
                    <% } %>
                    <div class="panel panel-default">
                		<div class="panel-heading">
                			<h3 class="panel-title">Add Developers</h3>
                		</div>
                		<div class="panel-body fixed-panel">
                            <div class="col-md-12">
                              <div class="col-md-1"><input type="checkbox" name="developers" value= "" disabled></div>
                              <div class="col-md-6"><strong><p>Tester Name</p></strong></div>
                              <div class="col-md-5"><strong><p>User ID</p></strong></div>
                            </div>
                            <form class="" action="/home/manageDevelopers/addDevelopers" method="post">
                                <% if(typeof(developersAdd) != 'undefined') { %>
                                  <% developersAdd.forEach(function(item, index) {%>
                                    <div class="col-md-12">
                                      <div class="col-md-1">
                                          <label>
                                              <input type="checkbox" name="developers[]" value= <%= item.developerId %> >
                                          </label>
                                      </div>
                                      <div class="col-md-6">
                                          <p> <%= item.developerName %> </p>
                                      </div>
                                      <div class="col-md-5">
                                          <p> <%= item.developerId %> </p>
                                      </div>
                                    </div>
                                  <% }); %>
                              <% } %>

                                <input type="submit" class="btn btn-md btn-primary pull-right" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
        			<div class="col-md-12">
                    <div class="panel panel-default">
                    		<div class="panel-heading">
                    			<h3 class="panel-title">Remove Developers</h3>
                    		</div>
                    		<div class="panel-body fixed-panel">
                          <div class="col-md-12">
                            <div class="col-md-1"><input type="checkbox" name="developers" value= "" disabled></div>
                            <div class="col-md-6"><strong><p>Tester Name</p></strong></div>
                            <div class="col-md-5"><strong><p>User ID</p></strong></div>
                          </div>
                          <form class="" action="/home/manageDevelopers/removeDevelopers" method="post">
                              <% if(typeof(developersRem) != 'undefined') { %>
                                <% developersRem.forEach(function(item, index) {%>
                                  <div class="col-md-12">
                                    <div class="col-md-1">
                                        <label>
                                            <input type="checkbox" name="developers[]" value= <%= item.developerId %> >
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> <%= item.developerName %> </p>
                                    </div>
                                    <div class="col-md-5">
                                        <p> <%= item.developerId %> </p>
                                    </div>
                                  </div>
                                <% }); %>
                            <% } %>

                              <input type="submit" class="btn btn-md btn-primary pull-right" value="Submit">
                          </form>
                        </div>
                    </div>
                </div>
              </div>

    </body>
</html>
