<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Manage Projects</title>
        <link rel="stylesheet" href="/style/manageProjects.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="/jquery.min.js"></script>

    </head>
    <body>

        <% include navbar %>

        <div class="container">
        	<div class="row">
    			<div class="col-md-12">
                    <% if(typeof(msg) != 'undefined') { %>
                        <%if(msg == 'successRem') {%>
                            <div class="alert alert-success alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success!</strong>&nbspTester(s) removed from the project team.
                            </div>
                        <% } else if(msg == 'failRem') {%>
                            <div class="alert alert-danger alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong>&nbspOperation failed.
                            </div>
                        <% } %>
                        <%if(msg == 'successAdd') {%>
                            <div class="alert alert-success alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success!</strong>&nbspTester(s) added to the project team.
                            </div>
                        <% } else if(msg == 'failAdd') {%>
                            <div class="alert alert-danger alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error!</strong>&nbspOperation failed.
                            </div>
                        <% } %>
                    <% } %>
                    <div class="panel panel-default resp">
                		<div class="panel-heading">
                			<h3 class="panel-title">Add Testers</h3>
                		</div>
                		<div class="panel-body fixed-panel">
                            <div class="col-md-12">
                              <div class="col-md-1"><input type="checkbox" name="testers" value= "" disabled></div>
                              <div class="col-md-6"><strong><p>Tester Name</p></strong></div>
                              <div class="col-md-5"><strong><p>User ID</p></strong></div>
                            </div>
                            <form class="" action="/home/manageTesters/addTesters" method="post">
                                <% if(typeof(testersAdd) != 'undefined') { %>
                                  <% testersAdd.forEach(function(item, index) {%>
                                    <div class="col-md-12">
                                      <div class="col-md-1">
                                          <label>
                                              <input type="checkbox" name="testers[]" value= <%= item.testerId %> >
                                          </label>
                                      </div>
                                      <div class="col-md-6">
                                          <p> <%= item.testerName %> </p>
                                      </div>
                                      <div class="col-md-5">
                                          <p> <%= item.testerId %> </p>
                                      </div>
                                    </div>
                                  <% }); %>
                              <% } %>

                                <input type="submit" class="btn btn-md btn-primary pull-right checkBtn" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
        			<div class="col-md-12">
                    <div class="panel panel-default resp">
                    		<div class="panel-heading">
                    			<h3 class="panel-title">Remove Testers</h3>
                    		</div>
                    		<div class="panel-body fixed-panel">
                          <div class="col-md-12">
                            <div class="col-md-1"><input type="checkbox" name="testers" value= "" disabled></div>
                            <div class="col-md-6"><strong><p>Tester Name</p></strong></div>
                            <div class="col-md-5"><strong><p>User ID</p></strong></div>
                          </div>
                          <form class="" action="/home/manageTesters/removeTesters" method="post">
                              <% if(typeof(testersRem) != 'undefined') { %>
                                <% testersRem.forEach(function(item, index) {%>
                                  <div class="col-md-12">
                                    <div class="col-md-1">
                                        <label>
                                            <input type="checkbox" name="testers[]" value= <%= item.testerId %> >
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <p> <%= item.testerName %> </p>
                                    </div>
                                    <div class="col-md-5">
                                        <p> <%= item.testerId %> </p>
                                    </div>
                                  </div>
                                <% }); %>
                            <% } %>

                              <input type="submit" class="btn btn-md btn-primary pull-right checkBtn" value="Submit">
                          </form>
                        </div>
                    </div>
                </div>
              </div>
              <script src="/checkboxValidate.js"></script>
    </body>
</html>
