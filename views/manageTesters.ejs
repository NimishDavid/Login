<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Manage Projects</title>
        <link rel="stylesheet" href="/style/manageProjects.css">
    </head>
    <body>

        <% include navbar %>

        <div class="container">
        	<div class="row">
    			<div class="col-md-12">
                    <div class="panel panel-default">
                		<div class="panel-heading">
                			<h3 class="panel-title">Add Testers</h3>
                		</div>
                		<div class="panel-body fixed-panel">
                            <form class="" action="/home/manageTesters/addTesters" method="post">
                              <% for(i=0;i<4;i++) { %>
                                <div class="col-md-12">
                                  <div class="col-md-1">
                                      <label>
                                          <input type="checkbox" name="testers" value= <%= i %> >
                                      </label>
                                  </div>
                                  <div class="col-md-6">
                                      <p>Developer Name</p>
                                  </div>
                                  <div class="col-md-5">
                                      <p>Developer ID</p>
                                  </div>
                                </div>
                              <% } %>

                                <input type="submit" class="btn btn-md btn-primary pull-right" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
        			<div class="col-md-12">
                    <div class="panel panel-default">
                    		<div class="panel-heading">
                    			<h3 class="panel-title">Remove Testers</h3>
                    		</div>
                    		<div class="panel-body fixed-panel">
                          <div class="col-md-12">
                            <div class="col-md-1"><input type="checkbox" name="testers" value= "" disabled></div>
                            <div class="col-md-6"><strong><p>Tester Name</p></strong></div>
                            <div class="col-md-5"><strong><p>User ID</p></strong></div>
                          </div>
                          <form class="" action="/home/manageTesters/removeTesters" method="post">
                            <% testers.forEach(function(item, index) {%>
                              <div class="col-md-12">
                                <div class="col-md-1">
                                    <label>
                                        <input type="checkbox" name="testers" value="" >
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p> <%= item.testerName %> </p>
                                </div>
                                <div class="col-md-5">
                                    <p> <%= item.testerId %> </p>
                                </div>
                                <input type="hidden" name="project_id" value= <%= item.projectId %> >
                              </div>
                            <% }); %>

                              <input type="submit" class="btn btn-md btn-primary pull-right" value="Submit">
                          </form>
                        </div>
                    </div>
                </div>
              </div>

    </body>
</html>
