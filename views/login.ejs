<!-- show any messages that come back with authentication -->
<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="style/main.css">
	<link rel="stylesheet" type="text/css" href="style/font-awesome-4.7.0/css/font-awesome.css">
    <script src="/jquery.min.js"></script>
    <script src="/validator.min.js">
    </script>
  </head>
  <body>
      <div class="container">
    <div class="row vertical-center">
        <div class="col-md-6 col-md-offset-3 login_panel">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="text-center"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp&nbspBug Tracker</h2>
                <div class="panel-body">
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form class="form-horizontal" role="form" data-toggle="validator" method="post">
                    <div class="form-group">
                        <label for="username" class="col-sm-3 control-label">
                            Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" pattern="^[0-9]{3}$" maxlength= "3" required>
                            <!-- <div class="help-block">Number of length 3</div> -->
                            <div class="help-block with-errors">Number of length 3</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-3 control-label">
                            Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required data-minlength= "6" maxlength="50">
                            <div class="help-block with-errors">Minimum length 6</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="remember"/>
                                    Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success btn-sm">
                                Sign in</button>
                                 <button type="reset" class="btn btn-danger btn-sm">
                                Reset</button>
                        </div>
                    </div>
                    </form>
                    <div class="forgot_password text-center">
                      <a href="/forgotPassword">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  </body>
</html>
