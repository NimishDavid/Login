<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Report Bug</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js">
        </script>

    </head>
    <body>

        <% include navbar %>

    <div class="container">
    <h1 class="well">Report a bug</h1>
	<div class="col-lg-12 well">
	<div class="row">
				<form name="reportBugForm" id="reportBugForm" data-toggle="validator" method="post" action="#">
					<div class="col-sm-12">
						<div class="row">
							<div class="col-sm-5 form-group">
								<label>Bug Name</label>
								<input type="text" name = "bug_name" placeholder="Bug Name" class="form-control" required>
                                <div class="help-block with-errors"></div>
							</div>
							<div class="col-sm-3 form-group">
								<label>Bug Type :</label>
                                <select class="form-control" name="bug_type" required>
                                 <option value="">Select Bug type</option>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
                            <div class="col-sm-4 form-group">
								<label>Project</label>
                                <select class="form-control" name="project" required>
                                    <% for(i=0;i<len;i++) {%>
                                    <option value = <%= proj[i].name %>><%= proj[i].name %></option>
                                    <% } %>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
						</div>
						<div class="form-group">
							<label>Bug Description</label>
							<textarea name="bug_description" placeholder="Bug description" rows="3" class="form-control" required></textarea>
                            <div class="help-block with-errors"></div>
						</div>
						<div class="row">
							<div class="col-sm-3 form-group">
								<label>Severity</label>
                                <select class="form-control" name="severity" required>
                                 <option value="volvo">Volvo</option>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
                            <div class="col-sm-3 form-group">
								<label>Priority</label>
                                <select class="form-control" name="priority" required>
                                 <option value="volvo">Volvo</option>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
							<div class="col-sm-6 form-group">
								<label>File</label>
								<input type="text" name = "file" placeholder="File Name" class="form-control" required>
                                <div class="help-block with-errors"></div>
							</div>
						</div>
						<div class="row">
                            <div class="col-sm-3 form-group">
								<label>Method</label>
								<input type="text" name="method" placeholder="Method" class="form-control" required>
                                <div class="help-block with-errors"></div>
							</div>
							<div class="col-sm-3 form-group">
								<label>Line</label>
								<input type="text" name="line" placeholder="Line" class="form-control" required>
                                <div class="help-block with-errors"></div>
							</div>
                            <div class="col-sm-3 form-group">
								<label>Status</label>
                                <select class="form-control" name="status" required>
                                 <option value="volvo">Volvo</option>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
                            <div class="col-sm-3 form-group">
								<label>Assign to</label>
                                <select class="form-control" name="manager" required>
                                 <option value="volvo">Volvo</option>
                                </select>
                                <div class="help-block with-errors"></div>
							</div>
						</div>
					<input type="submit" class="btn btn-primary" value="Submit">
					</div>
				</form>
				</div>
	</div>
	</div>

    </body>
</html>
